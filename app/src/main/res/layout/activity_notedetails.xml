<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notedetails">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbarofnotedetail"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="title"
            android:fontFamily="@font/questv1_regular"
            android:textColor="@color/black"
            android:id="@+id/titleofnotedetail">
        </TextView>

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:background="#f2eeec"
        android:gravity="top|right"
        android:textColor="@color/black"
        android:hint="أدخل بيانات مقاساتك هنا"
        android:fontFamily="@font/questv1_regular"
        android:layout_below="@id/toolbarofnotedetail"
        android:padding="15dp"
        android:id="@+id/contentofnotedetail">
    </TextView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gotoeditnote"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="bottom|end"
        android:src="@drawable/edit_foreground"
        app:backgroundTint="@color/add_size_background"
        app:maxImageSize="60dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</RelativeLayout>