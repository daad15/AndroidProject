<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".baby_beany">

    <include layout="@layout/toolbar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/white">

        <!-- Table Heading -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="قبعات المواليد"
                android:textSize="19dp"
                android:textStyle="bold"
                android:fontFamily="@font/questv1_regular"
                android:textColor="#383836"
                android:padding="20sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />
        </TableRow>

        <TableRow android:background="#F3CE33">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text=" العمر"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/questv1_regular" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="محيط الرأس (سم)"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/questv1_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="المقاس العالمي"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/questv1_regular"/>


        </TableRow>
        <!-- Table Data -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="ّ0-6 شهور"
                android:textSize="12sp"
                android:fontFamily="@font/questv1_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="~ّّ 40 "
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="XXS"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:background="#F2EEEC">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="ّ6-12 شهور"
                android:textSize="12sp"
                android:fontFamily="@font/questv1_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="~ 45"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="XS"
                android:textSize="12sp" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="12-14 شهر"
                android:textSize="12sp"
                android:fontFamily="@font/questv1_regular"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="~ 50"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="S"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

</RelativeLayout>