<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactUs">



    <ScrollView


        android:layout_width="match_parent"


        android:layout_height="match_parent"

        android:layout_gravity="center"


        android:background="@android:color/white"


        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout


            android:layout_width="match_parent"


            android:layout_height="wrap_content"


            android:orientation="vertical">
            <include layout="@layout/toolbar"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تواصل معنا!"
                android:textSize="24sp"
                android:fontFamily="@font/questv1_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/questv1_regular"
                android:text="في حال كان لديك استفسار او ملاحظات املىء النموذج ادناه و سوف يتم الرد في اقل من 24 ساعة." />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView


                android:layout_width="fill_parent"


                android:layout_height="wrap_content"


                android:paddingLeft="3dp"


                android:textAllCaps="true"


                android:textColor="@color/black"


                android:textSize="12sp" />


            <EditText


                android:id="@+id/your_name"
                android:layout_width="fill_parent"

                android:layout_height="48dp"


                android:layout_marginBottom="20dp"


                android:hint=" الاسم "
                android:fontFamily="@font/questv1_regular"


                android:inputType="text"


                android:singleLine="true"


                android:textSize="14sp" />


            <TextView


                android:layout_width="fill_parent"


                android:layout_height="wrap_content"


                android:paddingLeft="3dp"


                android:textAllCaps="true"


                android:textColor="@color/black"


                android:textSize="12sp" />


            <EditText


                android:id="@+id/your_email"


                android:layout_width="fill_parent"

                android:layout_height="48dp"
                android:layout_marginBottom="20dp"


                android:hint="البريد الالكتروني"
                android:fontFamily="@font/questv1_regular"


                android:inputType="textEmailAddress"


                android:singleLine="true"


                android:textSize="14sp" />


            <TextView


                android:layout_width="fill_parent"


                android:layout_height="wrap_content"


                android:paddingLeft="3dp"


                android:textAllCaps="true"


                android:textColor="@color/black"


                android:textSize="12sp" />


            <EditText


                android:id="@+id/your_subject"


                android:layout_width="fill_parent"


                android:layout_height="48dp"


                android:layout_marginBottom="20dp"


                android:hint="الموضوع "
                android:fontFamily="@font/questv1_regular"

                android:inputType="text"
                android:singleLine="true"


                android:textSize="14sp" />


            <TextView


                android:layout_width="fill_parent"


                android:layout_height="32dp"


                android:paddingLeft="3dp"


                android:text="ماهو استفسارك؟"
                android:fontFamily="@font/questv1_regular"


                android:textAllCaps="true"


                android:textColor="@color/black"


                android:textSize="12sp" />


            <EditText


                android:id="@+id/your_message"


                android:layout_width="fill_parent"


                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:height="180dp"
                android:gravity="top"
                android:hint="اكتب شيئًا"
                android:fontFamily="@font/questv1_regular"


                android:inputType="textMultiLine"


                android:textSize="14sp" />


            <Button


                android:id="@+id/post_message"


                android:layout_width="137dp"


                android:layout_height="48dp"


                android:layout_gravity="center"


                android:background="#f3ce3b"


                android:paddingLeft="15dp"


                android:paddingTop="1dp"


                android:paddingRight="15dp"


                android:paddingBottom="1dp"


                android:text="ارسال"
                android:fontFamily="@font/questv1_regular"


                android:textAllCaps="true"


                android:textColor="@color/white"

                android:textSize="13sp"

                />


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>